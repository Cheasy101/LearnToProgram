@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Contracts.Requests.Manager.LessonsCrud.AdminLessonEditDto


@{
    ViewBag.Title = Model.Id == Guid.Empty ? "Создание урока" : "Редактирование урока";
    Layout = "_Layout";
}

<div id="admin-lesson-edit" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>@ViewBag.Title</h2>

                <form asp-action="Save" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id">

                    <div class="form-group mb-3">
                        <label asp-for="SmallDescription" class="form-label">Краткое описание</label>
                        <input asp-for="SmallDescription" class="form-control">
                        <span asp-validation-for="SmallDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Полное описание</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="VideoLink" class="form-label">Ссылка на видео</label>
                        <input asp-for="VideoLink" class="form-control">
                        <span asp-validation-for="VideoLink" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label">Изображение урока</label>
                        <input type="file" name="PhotoFile" class="form-control">
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Назад</a>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}