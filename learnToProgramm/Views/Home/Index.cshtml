<!-- Courses -->
<section id="courses">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="section-title">
                    <h2>Доступные уроки <small>Первичное интро при обучении программированию</small></h2>
                </div>

                <div class="owl-carousel owl-theme owl-courses">
                    @foreach (var lesson in Model.Courses)
                    {
                        <div class="col-md-4 col-sm-4">
                            <div class="item">
                                <div class="courses-thumb">
                                    <div class="courses-top">
                                        <div class="courses-image">
                                            @* <img src="@lesson.LessonPhotoUrl" class="img-responsive" alt=""> *@
                                            <img src="@Url.Content(lesson.LessonPhotoUrl)" class="img-responsive" alt="Изображение курса">
                                        </div>
                                    </div>
                                    <div class="courses-detail">
                                        <h3>
                                            @* todo в бд добавить название каждого курса и отдельно выводить сначала нащвание, а потом дескрипшн *@
                                            <!-- Ссылка на страницу урока с передачей ID -->
                                            <a asp-controller="Lesson" asp-action="Index" asp-route-id="@lesson.Id">
                                                @lesson.SmallDescription
                                            </a>
                                        </h3>
                                        <p>@lesson.SmallDescription</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</section>

