<!-- CONTACT -->
<section id="contact">
    <div class="container">
        <div class="row">

            <div class="col-md-6 col-sm-12">
                <form id="contact-form" role="form" action="@Url.Action("SubmitFeedback", "Home")" method="post">
                    <div class="section-title">
                        <h2>Окно для обратной связи</h2>
                    </div>

                    <div class="col-md-12 col-sm-12">
                        <input type="text" class="form-control" placeholder="Введите ваше полное имя" asp-for="FeedbackDto.FullName" required>

                        <input type="email" class="form-control" placeholder="Введите адрес электронной почты" asp-for="FeedbackDto.EmailAddress" required>

                        <textarea class="form-control" rows="6" placeholder="Опишите ваше сообщение" asp-for="FeedbackDto.UserMessage" required></textarea>
                    </div>

                    <div class="col-md-4 col-sm-12">
                        <input type="submit" class="form-control" value="Отправить сообщение">
                    </div>
                </form>
            </div>

            <div class="col-md-6 col-sm-12">
                <div class="contact-image">
                    <img src="~/images/contact-image.jpg" class="img-responsive" alt="Две улыбающиеся девушки">
                </div>
            </div>

        </div>
    </div>
</section>