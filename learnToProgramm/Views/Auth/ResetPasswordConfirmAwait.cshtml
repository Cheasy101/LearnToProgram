<!--== Start Confirmation Area Wrapper ==-->
<section class="confirmation-area">
    <div class="container pt--0 pb--0">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="confirmation-wrap">
                    <div class="confirmation-thumb">
