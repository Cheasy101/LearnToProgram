@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Contracts.Requests.Auth.PostResetPasswordConfirm.PostResetPasswordConfirmRequest;

@{
    ViewBag.Title = "Confirm Reset Password";
    Layout = "_Layout"; // Используем глобальный макет для единообразия стиля.
}

<div class="page-header-area sec-overlay sec-overlay-black" style="background-image: url('~/img/photos/bg2.jpg');">
    <div class="container pt--0 pb--0">
        <div class="row">
            <div class="col-12">
                <div class="page-header-content">
                    <h2 class="title">Confirm Reset Password</h2>
                    <nav class="breadcrumb-area">
                        <ul class="breadcrumb justify-content-center">
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-sep">//</li>
                            <li>Confirm Reset Password</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!--== End Page Header Area Wrapper ==-->

<!--== Start Reset Password Confirmation Area Wrapper ==-->
<section class="account-login-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <div class="login-register-form-wrap">
                    <div class="login-register-form">
                        <div class="form-title">
                            <h4 class="title">Enter New Password</h4>
                        </div>
                        <form asp-controller="Auth" asp-action="ResetPasswordConfirm" method="post">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="UserResetPasswordToken" />
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <input class="form-control" type="password" asp-for="NewPassword" placeholder="New Password">
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <input class="form-control" type="password" asp-for="NewPasswordConfirm" placeholder="Confirm New Password">
                                        <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Confirm Reset</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--== End Reset Password Confirmation Area Wrapper ==-->
