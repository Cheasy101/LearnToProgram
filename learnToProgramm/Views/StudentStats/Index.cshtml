@model Contracts.Requests.TeacherAndAdmin.TeacherAndAdminResponse

@{
    ViewBag.Title = "Обзор";
    Layout = "_Layout";
}

<div class="container">
    <h2>Статистика пользователей по урокам</h2>
    @if (Model.UserStatsResponse != null && Model.UserStatsResponse.Count > 0)
    {
        <table class="table table-hover">
            <thead class="thead-light">
            <tr>
                <th>Пользователь</th>
                <th>Урок</th>
                <th>Статус</th>
                <th>Попытки</th>
                <th>Подсказка</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var stats in Model.UserStatsResponse)
            {
                <tr>
                    <td>@stats.User</td>
                    <td>@stats.Lesson</td>
                    <td>@(stats.IsDone ? "Завершено" : "Не завершено")</td>
                    <td>@stats.Attempts</td>
                    <td>
                        @if (stats.HasHint)
                        {
                            <span>@stats.Hint (после @stats.HintAttemptsThreshold попыток)</span>
                        }
                        else
                        {
                            <span class="text-muted">Подсказка не задана</span>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Статистика пользователей отсутствует.</p>
    }
</div>