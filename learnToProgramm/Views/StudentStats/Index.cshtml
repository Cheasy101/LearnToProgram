@model Contracts.Requests.TeacherAndAdmin.TeacherAndAdminResponse

@{
    ViewBag.Title = "Overview";
    Layout = "_Layout";
}

<div class="container">
    <h2>User Lesson Statistics</h2>
    @if (Model.UserStatsResponse != null && Model.UserStatsResponse.Count > 0)
    {
        <table class="table table-hover">
            <thead class="thead-light">
            <tr>
                <th>User</th>
                <th>Lesson</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var stats in Model.UserStatsResponse)
            {
                <tr>
                    <td>@stats.User</td>
                    <td>@stats.Lesson</td>
                    <td>@(stats.IsDone ? "Completed" : "Not Completed")</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No user statistics available.</p>
    }
</div>