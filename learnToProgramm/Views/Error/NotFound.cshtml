@using Microsoft.AspNetCore.Mvc.TagHelpers
@model dynamic

@{
    ViewBag.Title = "Not Found";
    Layout = "_Layout";
}

<section class="error-page-area">
    <div class="container pt--0 pb--0">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="error-page-wrap">
                    <div class="error-page-thumb">
                        <img src="~/img/photos/404.png" alt="404 Not Found" class="img-fluid">
                    </div>
                    <div class="error-page-content">
                        <h2 class="title">Sorry, this page is not found.</h2>
                        <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">
                            <i class="icofont-long-arrow-left"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>