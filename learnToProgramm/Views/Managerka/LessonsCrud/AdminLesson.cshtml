@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Contracts.Requests.Manager.LessonsCrud.AdminLessonResponseModel

@{
    ViewBag.Title = "Управление уроками";
    Layout = "_Layout";
}

<div id="admin-lessons" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@ViewBag.Title</h2>

                <div class="d-flex justify-content-end mb-4">
                    <a asp-action="Edit" class="btn btn-success">
                        <i class="fas fa-plus"></i> Создать урок
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Изображение</th>
                            <th>Название</th>
                            <th>Видео</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var lesson in Model.Lessons)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(lesson.LessonPhotoUrl))
                                    {
                                        <img src="/thumbnails/@System.IO.Path.GetFileName(lesson.LessonPhotoUrl)"
                                             style="width: 100px; height: auto;" class="img-thumbnail" />
                                    }
                                </td>
                                <td>@lesson.SmallDescription</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(lesson.VideoLink))
                                    {
                                        <a href="@lesson.VideoLink" target="_blank">Смотреть</a>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@lesson.Id" class="btn btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" onsubmit="return confirm('Удалить урок?');">
                                            <input type="hidden" name="id" value="@lesson.Id">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
